

<%- include('./header.ejs'); %>


<!-- Statistics -->
<div class="row match-height">
  
  <div class="col-12">
      <div class="card">
          <div class="card-header">
              <h4 class="card-title">Appointments</h4>
              <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
          </div>
          <div class="card-content collapse show">
              <div class="card-body">
                  <div class="table-responsive">
                      <table class="table">
                          <thead>
                              <tr>
                                  <th class="card-title">Sr no.</th>
                                  <th class="card-title">User Email</th>
                                  <th class="card-title">Instructor Email</th>
                                  <th class="card-title">Reiki Name</th>
                                  <th class="card-title">View</th>
                              </tr>
                          </thead>
                          <tbody>
                              <!-- loop -->
                              <% for(let i=0;i<appointments.length;i++){%>
                                <tr>
                                  <th class="card-subtitle" scope="row"><%= i+1%></th>
                                  <td class="card-subtitle"><%= appointments[i].user_id.email%></td>
                                  <td class="card-subtitle"><%= appointments[i].instructor_id.email%></td>
                                  <td class="card-subtitle"><%= appointments[i].reiki_id.name%></td>
                                  <td>
                                      <a href="/admin/appointments/<%= appointments[i].id%>"><button type="button" class="btn mr-1 mb-1 btn-dark btn-sm"><i class="la la-eye"></i></button></a>
                                  </td>
                                </tr>
                              <%}%>
                              <!-- loop -->
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
<!--/ Statistics -->
      </div>
    </div>
  </div>
  <!-- ////////////////////////////////////////////////////////////////////////////-->

<%- include('./footer.ejs'); %>